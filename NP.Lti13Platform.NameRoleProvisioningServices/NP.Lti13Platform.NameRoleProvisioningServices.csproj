  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Lti13Platform.Core\NP.Lti13Platform.Core.csproj" />
    <ProjectReference Include="..\NP.Lti13Platform.Core\NP.Lti13Platform.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="package-icon.png">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Update="README.md">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

